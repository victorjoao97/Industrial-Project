@{
    int selectedResource = (int)ViewData["SelectedResource"];
}

<button type="button" class="btn vertical-crd-button" data-toggle="modal" data-target="#createBGroupModal" disabled="@((selectedResource > 0) ? null : "disabled")">
    <i class="far fa-plus-square"></i><br>Add
</button>


<!-- Modal Window-->
<div class="modal fade" id="createBGroupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
            <div class="modal-content text-left">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add BGroup</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="bgroup_name">BGroup Name</label>
                        <input type="text" class="form-control" id="add_bgroup_name" placeholder="BGroup Name" name="bgroupName" required data-error='BGroup Name is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="parent_bgroup">Parent BGroup</label>
                        <input type="text" class="form-control" id="add_parent_bgroup" placeholder="Parent BGroup" name="parentBgroup" readonly required data-error='Parent BGroup is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="resource">Resource</label>
                        <input type="text" class="form-control" id="add_resource" placeholder="Resource" name="resource" readonly required data-error='Resource is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                    <div class="form-group">
                        <label for="valid_disbalance">Valid Disbalance</label>
                        <input type="text" class="form-control" id="add_valid_disbalance" placeholder="Valid Disbalance" name="validDisbalance" required data-error='Valid Disbalance is required'>
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input name="resourceId" type="hidden" value="@selectedResource">
                    <input name="bGroupIdParent" type="hidden" value="">
                    <button type="button" class="btn modal-button-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn modal-button-primary">Save</button>
                </div>
            </div>
    </div>
</div>

