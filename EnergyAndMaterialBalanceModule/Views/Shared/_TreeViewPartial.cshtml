@{
    JsonResult treeViewBGroups = null;
    if (ViewData["BGroups"] != null) {
        treeViewBGroups = (JsonResult)ViewData["BGroups"];
    }

    int? selectedResource = null;
    //just hack for working without implemented ViewData["SelectedResource"] in controller
    if (ViewData["SelectedResource"] != null)
    {
        selectedResource = (int)ViewData["SelectedResource"];
    }

    int? selectedBGroup = null;
    //just hack for working without implemented ViewData["SelectedResource"] in controller
    if (ViewData["SelectedBGroup"] != null)
    {
        selectedBGroup = (int)ViewData["SelectedBGroup"];
    }

}
<div class="row">
    <div class="col-12">
        <div class="border border-radius-zero bg-white text-dark group-list mt-2 ml-4 mr-4">
            <div id="tree"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
        var tree = $('#tree').tree({
            uiLibrary: 'bootstrap4',
            primaryKey: 'bgroupId',
            textField: 'bgroupName',
            childrenField: "inverseBgroupIdparentNavigation",
            dataSource: @Json.Serialize(treeViewBGroups.Value)
         });

    tree.on('select', function (e, node, id) {

        window.location.href = location.protocol + '//' +
            location.host + "/Main/Index/" + @selectedResource + '/' + id;
    });

    tree.on('dataBound', function () {
        tree.collapseAll();
       
    });

</script>